<% content_for :admin do %>
<p>
  <%= link_to 'Add new divisions', new_division_path %>
</p>
<% end %>

<div id='page_title'>
  <%= title('Divisions', :h1) %>
</div>

<table>
  <tr>
    <th>Division</th>
	<th>Price</th>
	<th colspan='2'>Actions</th>
  </tr>

<% @divisions.each do |division| %>
  <tr>
    <td><%= division.name %></td>
	<td><%= division.price %></td>
	<td><%= link_to 'Edit', edit_division_path(division) %><br/></td>
    <td><%= link_to 'Delete', division, :confirm => 'Are you sure?', :method => :delete %></td>
	</td>
  </tr>
<% end %>
</table>