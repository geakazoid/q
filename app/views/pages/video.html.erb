<% else %>
  <div id='page_title'>
    <%= title("Live Video: " + params[:name], :h1) %>
  </div>
  <p><%= link_to "Other Video Feeds", video_pages_path %></p>
  <p>
    <script type='text/javascript' src='/javascripts/jwplayer.js'></script>
  </p>
  <div id="mediaspace">Flash Player must be installed! Videos will not work on Apple ipads, ipods, or iphones. Some android devices might work.</div>
  <p>
<script type='text/javascript'>
  jwplayer('mediaspace').setup({
    'flashplayer': '/player.swf',
    'type': 'rtmp',
    'streamer': 'rtmp://video.q2014.org/SOSample',
    'autostart': 'true',
    'bufferlength': '10',
    'file': '<%= params[:source] %>',
    'width': '640',
    'height': '480'
  });
</script>
  </p>
<% end %>
