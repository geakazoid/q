<div id='page_title'>
  <%= title('Live Video', :h1) %>
</div>
<% if !params[:source] %>
  <p>
    You can watch live video from any of the following feeds!
  </p>
  <p>
    <strong>Chapel Services</strong><br/>
    <%= link_to "Centennial Chapel", video_pages_path({:source => "centennial"}) %><br/>
  </p>
  <p>
    <strong>Quizzing Rooms</strong><br/>
    <%= link_to "TCC Sanctuary", video_pages_path({:source => "tccSanctuary"}) %><br/>
    <%= link_to "TCC Chapel", video_pages_path({:source => "tccChapel"}) %><br/>
    <%= link_to "TCC LL02", video_pages_path({:source => "tccLL02"}) %><br/>
    <%= link_to "Boone Convocation", video_pages_path({:source => "booneConvocation"}) %><br/>
    <%= link_to "Boone 102", video_pages_path({:source => "boone102"}) %><br/>
    <%= link_to "Boone 104", video_pages_path({:source => "boone104"}) %><br/>
    <%= link_to "Boone 106", video_pages_path({:source => "boone106"}) %><br/>
    <%= link_to "McClurkan Auditorium", video_pages_path({:source => "mcclurkanAuditorium"}) %><br/>
    <%= link_to "McClurkan 100", video_pages_path({:source => "mcclurkan100"}) %><br/>
    <%= link_to "McClurkan 101", video_pages_path({:source => "mcclurkan101"}) %><br/>
  </p>
<% else %>
  <h2><%= @rooms[params[:source]] %></h2>
  <p>
    <script type='text/javascript' src='/javascripts/jwplayer.js'></script>
  </p>
  <div id="mediaspace">Flash Player must be installed! Videos will not work on Apple ipads, ipods, or iphones. Some android devices might work.</div>
  <p>
<script type='text/javascript'>
  jwplayer('mediaspace').setup({
    'flashplayer': '/player.swf',
    'type': 'rtmp',
    'streamer': 'rtmp://video.q2012.org/SOSample',
    'autostart': 'true',
    'bufferlength': '10',
    'file': '<%= params[:source] %>',
    'width': '320',
    'height': '240'
  });
</script>
  </p>
<% end %>
