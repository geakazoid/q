<div id='page_title'>
  <%= title('Reports', :h1) %>
</div>
<h3>Standard Reports</h3>
<% if admin? %>
  <%= link_to 'Team Registrations', :controller => 'reports', :action => 'team_registrations_all' %>
  <br/>
  <%= link_to 'Participant Registrations', :controller => 'reports', :action => 'participant_registrations_all' %>
  <br/>
  Participants and Teams :
  <%= link_to 'All', :controller => 'reports', :action => 'coaches_quizzers_teams' %> :
  <%= link_to 'Coaches', :controller => 'reports', :action => 'coaches_teams' %> :
  <%= link_to 'Quizzers', :controller => 'reports', :action => 'quizzers_teams' %>
  <br/>
  <%= link_to 'Equipment Registrations', :controller => 'reports', :action => 'equipment_registrations' %><br/>
<% end %>
<% if admin? or seminar_admin? %>
  <%= link_to 'Seminar Registrations', :controller => 'reports', :action => 'seminar_registrations' %><br/>
<% end %>
<% if admin? or housing_admin? or ministry_project_admin? %>
  <%= link_to 'Event Staff', :controller => 'reports', :action => 'core_staff' %><br/>
  <%= link_to 'Group Leaders', :controller => 'reports', :action => 'group_leaders' %><br/>
  <%= link_to 'No Team', :controller => 'reports', :action => 'no_team' %><br/>
  Liability Forms :
  <%= link_to 'All', :controller => 'reports', :action => 'participants_liability'  %> :
  <%= link_to 'Received', :controller => 'reports', :action => 'participants_liability', :params => {:received => 'true'} %> :
  <%= link_to 'Not Received', :controller => 'reports', :action => 'participants_liability', :params => {:not_received => 'true'} %>
  <br/>
  <%= link_to 'Special Needs', :controller => 'reports', :action => 'special_needs' %><br/>
  Housing :
  <%= link_to 'All', :controller => 'reports', :action => 'housing_all'  %> :
  <%= link_to 'Pre Housing', :controller => 'reports', :action => 'housing_pre' %> :
  <%= link_to 'Off Campus Guests', :controller => 'reports', :action => 'housing_offcampus' %>
  <h3>Group Leader Summary</h3>
  <% form_tag '/reports/group_leader_summary' do %>
    Select Group Leader:
    <%= select_tag :group_leader, '<option>- Select -</option>' + options_for_select(@group_leaders) %>
    <%= submit_tag 'Submit' %><br/>
    <%= link_to 'All Group Leaders', :controller => 'reports', :action => 'group_leader_summary' %>
  <% end %>
<% end %>
<% if admin? or housing_admin? %>
  <h3>Housing</h3>
  Housing Assignments :
  <%= link_to 'All', :controller => 'reports', :action => 'housing_all' %> :
  <%= link_to 'Pre / Post', :controller => 'reports', :action => 'housing_pre_post' %>
  <h3>Housing By Building</h3>
  <% form_tag '/reports/housing_by_building' do %>
    Select Building:
    <%= select_tag :building_id, '<option>- Select -</option>' + options_from_collection_for_select(@buildings, 'id', 'name') %>
    <%= submit_tag 'Submit' %><br/>
    <%= link_to 'All Buildings', :controller => 'reports', :action => 'housing_by_building' %>
  <% end %>
  <h3>Housing By Group Leader</h3>
  <% form_tag '/reports/housing_by_group_leader' do %>
    Select Group Leader:
    <%= select_tag :group_leader, '<option>- Select -</option>' + options_for_select(@group_leaders) %>
    <%= submit_tag 'Submit' %><br/>
    <%= link_to 'All Group Leaders', :controller => 'reports', :action => 'housing_by_group_leader' %>
  <% end %>
<% end %>
<% if admin? or ministry_project_admin? %>
  <h3>Ministry Projects</h3>
  <% form_tag '/reports/ministry_projects' do %>
    Select Ministry Project:
    <%= select_tag :ministry_project_id, '<option>- Select -</option>' + options_from_collection_for_select(@ministry_projects, 'id', 'name') %>
    <%= submit_tag 'Submit' %><br/>
    <%= link_to 'All Ministry Projects (Tabbed)', :controller => 'reports', :action => 'ministry_projects' %><br/>
    <%= link_to 'All Ministry Projects (Full)', :controller => 'reports', :action => 'ministry_projects_full' %>
  <% end %>
<% end %>