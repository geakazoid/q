    <%= pform.label :description, 'Description' %><br/>
    <%= pform.text_area :description, :size => "50x6" %>
  </p>
  <p>
    <%= pform.submit 'Send Payment Email', :class => 'btn btn-primary' %>
  </p>
<% end %>