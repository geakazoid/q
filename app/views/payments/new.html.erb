<div id='page_title'>
  <%= title('Create a new payment request', :h1) %>
</div>

<% form_for @payment do |pform| %>
  <%= error_messages_for :payment, :header_message => "There were errors with creation of the payment.", :message => "We encountered the following problems:" %>

  <p>
    Please fill out the following form to send a one time payment request link to a user for <%= Event.active_event.title %>.
  </p>
  <p>
    <%= pform.label :first_name, 'First Name' %><br/>
    <%= pform.text_field :first_name %>
  </p>
  <p>
    <%= pform.label :last_name, 'Last Name' %><br/>
    <%= pform.text_field :last_name %>
  </p>
  <p>
    <%= pform.label :email, 'Email Address' %><br/>
    <%= pform.text_field :email %>
  </p>
  <p>
    <%= pform.label :fee, 'Fee' %><br/>
    <%= pform.select :fee,
      [['$5', '5'],
       ['$10', '10'],
       ['$15', '15'],
       ['$25', '25'],
       ['$30', '30'],
       ['$35', '35'],
       ['$40', '40'],
       ['$100', '100'],
       ['$125', '125'],
       ['$150', '150'],
       ['$175', '175'],
       ['$180', '180'],
       ['$185', '185'],
       ['$190', '190'],
       ['$195', '195'],
       ['$200', '200'],
       ['$205', '205'],
       ['$210', '210'],
       ['$215', '215'],
       ['$220', '220'],
       ['$225', '225'],
       ['$230', '230'],
       ['$235', '235'],
       ['$240', '240'],
       ['$250', '250'],
       ['$255', '255'],
       ['$260', '260'],
       ['$265', '265'],
       ['$275', '275'],
       ['$300', '300'],
       ['$350', '350'],
       ['$375', '375'],
       ['$400', '400'],
       ['$425', '425'],
       ['$450', '450'],
       ['$500', '500'],
