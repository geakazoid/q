    <h3>Payment Details</h3>
    <div id='payment_details'>
      <div class='receipt_details'>
        <% if (!@team_registration.nil?)%>
          <% @team_registration.teams.each do |team| %>
            <div class='row'>
              <span class='label'>Team:</span>
              <span class='details'><%= team.name %> (<%= team.division.name %>) - $<%= team.amount_in_cents / 100 %></span>
            </div>
            <% if team.discounted? %>
              <div class='row'>
                <span class='label'></span>
                <span class='details'>($15 discount applied)</span>
              </div>
            <% end %>
          <% end %>
          <div class='row' style='margin-top: 30px;'>
            <span class='label'>Payment Amount:</span>
            <span class='details'>$<%= @total_amount %></span>
          </div>
        <% end %>
        <% if (!@participant_registration.nil?)%>
          <div class='row'>
            <span class='label'>Participant:</span>
            <span class='details'><%= @participant_registration.full_name %></span>
          </div>
          <div class='row'>
            <% if (session[:participant_registration][:partial_payment]) %>
            <span class='label'>Partial Payment:</span>
            <% else %>
            <span class='label'>Full Payment:</span>
            <% end %>
            <span class='details'>$<%= session[:participant_registration][:registration_amount] / 100 %>.00</span>
          </div>
          <% if !session[:participant_registration][:skip_extras] and session[:participant_registration][:extras_amount] > 0 %>
          <div class='row'>
            <span class='label'>Extras:</span>
            <span class='details'>$<%= session[:participant_registration][:extras_amount] / 100 %>.00</span>
          </div>          
          <% end %>
          <div class='row' style='margin-top: 30px;'>
            <span class='label'>Payment Amount:</span>
            <span class='details'>$<%= @amount_in_cents / 100 %>.00</span>
          </div>
        <% end %>
      </div>
    </div>
