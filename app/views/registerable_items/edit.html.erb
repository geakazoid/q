<%= title('Update Registerable Item', :h1) %>

<% form_for(@registerable_item) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name, :size => 60 %>
  </p>
  <p>
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit 'Update' %> or <%= link_to 'Cancel', registerable_items_path %>
  </p>
<% end %>