<% content_for :admin do %>
<p>
  <%= link_to 'Add new districts', new_district_path %>
</p>
<% end %>

<div id='page_title'>
  <%= title('Districts', :h1) %>
</div>

<table>
  <tr>
    <th>District</th>
	<th>Region</th>
	<th>Director</th>
	<th>Phone(s)</th>
	<th>Email</th>
	<th colspan='2'>Actions</th>
  </tr>

<% @districts.each do |district| %>
  <tr>
    <td><%= district.name %></td>
	<td><%= district.region.name if district.region %></td>
	<td><%= district.director unless district.director.blank? %></td>
	<td>
	  <%= "Main: " + district.phone unless district.phone.blank? %><br/>
	  <%= "Mobile: " + district.mobile_phone unless district.mobile_phone.blank? %></td>
	<td><%= district.email %></td>
	<td><%= link_to 'Edit', edit_district_path(district) %><br/></td>
    <td><%= link_to 'Delete', district, :confirm => 'Are you sure?', :method => :delete %></td>
	</td>
  </tr>
<% end %>
</table>