<% content_for :admin do %>
<p>
  <%= link_to 'Download Team Registrations', reports_path %>
</p>
<% end %>

<div id='page_title'>
  <%= title('Team Registrations', :h1) %>
</div>

<table>
  <tr>
    <th>Name</th>
	<th>Registered Teams</th>
    <th>District / Region</th>
	<th colspan='3'>Actions</th>
  </tr>

<% @team_registrations.each do |team_registration| %>
  <tr>
    <td><%= team_registration.full_name %></td>
	<td><%= team_registration.teams.size %></td>
    <td><%= team_registration.district.display_with_region %></td>
	<td><%= link_to 'Show', team_registration_path(team_registration) %></td>
	<td><%= link_to 'Edit', edit_team_registration_path(team_registration) %></td>
    <td><%= link_to 'Delete', team_registration, :confirm => 'Are you sure you want to delete this team registration?', :method => :delete %></td>
  </tr>
<% end %>
</table>