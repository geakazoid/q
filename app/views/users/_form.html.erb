<% form_for @user do |user_form| %>
  <% if @user.new_record? %>
    <%= error_messages_for :user, :header_message => "There were errors with your registration.", :message => "We encountered the following problems:" %>
  <% else %>
    <%= error_messages_for :user, :header_message => "There were errors updating your account.", :message => "We encountered the following problems:" %>
  <% end %>
  <h3>Basics</h3>
  <p>
    <%= user_form.label :first_name, 'First Name*' %><br />
    <%= user_form.text_field :first_name %>
  </p>
  <p>
    <%= user_form.label :last_name, 'Last Name*' %><br />
    <%= user_form.text_field :last_name %>
  </p>
  <p>
    <%= user_form.label :email, 'Email*' %><br />
    <%= user_form.text_field :email %>
  </p>
  <p>
    <%= user_form.label :phone, 'Phone*' %><br />
    <label>(xxx-xxx-xxxx)</label><br/>
    <%= user_form.text_field :phone %>
  </p>
  <p>
    <%= user_form.label :district, 'District' %><br/>
    <%= user_form.collection_select :district_id,
        District.all(:order => 'name asc'),
        :id,
        :display_with_region,
        {:prompt => '- Select -'} %>
  </p>
  <div>
    <%= user_form.label :password, 'Password*' %><br />
    <p class="entryhelp" style="margin-top:0.5em;">Enter a password twice (must be longer than 6 characters).</p>
    <%= user_form.password_field :password, :size => 16 %>
    <span class="entryhelp">(once)</span><br />
    <%= user_form.password_field :password_confirmation, :size => 16 %>
    <span class="entryhelp">(and again)</span>
  </div>
  <p>
    <%= user_form.check_box :communicate_by_email %>
    <%= user_form.label :communicate_by_email, 'I would like to be able to receive future communication by email.' %><br />
  </p>
  <p>
    <%= user_form.submit @user.new_record? ? 'Register' : 'Update Account' %>
  </p>
<% end %>